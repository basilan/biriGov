# AI Claims Validation Reference Implementation - Environment Configuration
# Copy this file to .env and update values for your environment
# This is the SINGLE SOURCE OF TRUTH for all environment variables

# =============================================================================
# CORE API KEYS (REQUIRED for real AI integration)
# =============================================================================
OPENAI_API_KEY="sk-your-openai-key-here"
NVIDIA_API_KEY="your-nvidia-key-here"

# =============================================================================
# AWS CONFIGURATION (REQUIRED for infrastructure)
# =============================================================================
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="us-east-1"

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME="AI Claims Validation Reference Implementation"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG="false"

# =============================================================================
# AI INTEGRATION SETTINGS
# =============================================================================
USE_MOCK_AI="false"
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS="1000"
OPENAI_TEMPERATURE="0.1"

# =============================================================================
# COST CONTROL & BUDGETS
# =============================================================================
MAX_DEMO_BUDGET_USD="50.0"
BUDGET_WARNING_THRESHOLD_USD="45.0"
COST_TRACKING_ENABLED="true"

# =============================================================================
# PROCESSING LIMITS
# =============================================================================
MAX_PROCESSING_TIME_SECONDS="300"
MAX_CLAIMS_PER_SESSION="10"

# =============================================================================
# AWS RESOURCE NAMES (will be prefixed with environment)
# =============================================================================
DYNAMODB_CLAIMS_TABLE="healthcare-claims"
DYNAMODB_RESULTS_TABLE="validation-results"
DYNAMODB_SESSIONS_TABLE="demonstration-sessions"
S3_BUCKET_NAME="healthcare-ai-governance"

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL="INFO"
LOG_FORMAT="json"
AUDIT_LOGGING_ENABLED="true"
CLOUDWATCH_LOG_GROUP="/aws/lambda/healthcare-claims-validator"

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"
API_TIMEOUT="30000"

# =============================================================================
# DEMO & PRESENTATION SETTINGS
# =============================================================================
COMPANY_NAME="Healthcare Corporation"
DEMO_EXECUTIVE_NAME="Healthcare Executive"
DEMO_MODE="true"
HIPAA_COMPLIANT_LOGGING="true"