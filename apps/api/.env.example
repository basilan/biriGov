# Healthcare AI Governance Agent - Backend Environment Configuration
# Copy this file to .env and update values for your environment

# Application Configuration
APP_NAME="Healthcare AI Governance Agent"
APP_VERSION="1.0.0"
DEBUG=false

# AI Configuration - REAL AI Integration (NO MOCKS!)
USE_MOCK_AI=false
MOCK_AI_REALISTIC_DELAYS=false

# OpenAI Configuration (required for Phase 2 - real AI integration)
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.1

# NVIDIA AI Enterprise Configuration (optional - for Phase 2)
NVIDIA_API_KEY=""
NVIDIA_API_BASE_URL="https://api.nvcf.nvidia.com/v2"

# AWS Configuration (uses default credentials if not specified)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""

# DynamoDB Table Names
DYNAMODB_CLAIMS_TABLE="healthcare-claims-dev"
DYNAMODB_RESULTS_TABLE="validation-results-dev" 
DYNAMODB_SESSIONS_TABLE="demonstration-sessions-dev"

# S3 Configuration
S3_BUCKET_NAME="healthcare-ai-governance-dev"
S3_CLAIMS_PREFIX="claims/"
S3_RESULTS_PREFIX="results/"
S3_SESSIONS_PREFIX="sessions/"

# Cost Control Configuration
MAX_DEMO_BUDGET_USD=50.0
BUDGET_WARNING_THRESHOLD_USD=45.0
COST_TRACKING_ENABLED=true

# Processing Limits
MAX_PROCESSING_TIME_SECONDS=300
MAX_CLAIMS_PER_SESSION=10

# CORS Configuration (for frontend integration)
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FORMAT="json"
AUDIT_LOGGING_ENABLED=true
CLOUDWATCH_LOG_GROUP="/aws/lambda/healthcare-claims-validator"

# Development Environment Settings
ENVIRONMENT="development"