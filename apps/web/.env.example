# Healthcare AI Governance Agent - Frontend Environment Variables
# Copy this file to .env.local and customize for your deployment

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_TIMEOUT=30000

# AWS Configuration (for direct AWS SDK usage if needed)
VITE_AWS_REGION=us-east-1

# Healthcare AI Configuration
VITE_OPENAI_MODEL=gpt-4
VITE_MAX_CLAIMS_PER_SESSION=100
VITE_DEMO_BUDGET_LIMIT=50.00

# Cost Tracking
VITE_COST_ALERT_THRESHOLD=45.00
VITE_COST_WARNING_THRESHOLD=35.00

# Session Configuration
VITE_SESSION_TIMEOUT_MINUTES=60
VITE_AUTO_REFRESH_INTERVAL=30000

# Development Configuration
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_MOCK_DATA=false
VITE_LOG_LEVEL=info

# Executive Presentation Settings
VITE_COMPANY_NAME="Healthcare Corporation"
VITE_DEMO_EXECUTIVE_NAME="Healthcare Executive"
VITE_DEMO_MODE=true

# Healthcare Compliance
VITE_HIPAA_COMPLIANT_LOGGING=true
VITE_AUDIT_TRAIL_ENABLED=true

# Performance Monitoring
VITE_PERFORMANCE_MONITORING=true
VITE_ERROR_REPORTING=true

# Application Metadata
VITE_APP_VERSION=1.0.0
VITE_APP_BUILD_DATE=2025-08-26
VITE_APP_ENVIRONMENT=development